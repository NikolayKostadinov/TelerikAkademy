<Application x:Class="TelerikUniversity.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Behaviors="clr-namespace:TelerikUniversity.Wpf.Behavious"
             xmlns:Converters="clr-namespace:TelerikUniversity.Wpf.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Converters:ColorToSolidColorBrush x:Key="MyColorToSolidColorBrush"/>

            <Style x:Key="GridMarginBegavior" TargetType="Grid">
                <Setter Property="Behaviors:MarginSetterBehavior.Margin" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
